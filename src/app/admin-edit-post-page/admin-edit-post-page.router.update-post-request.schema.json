{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "properties": {
    "body": {
      "type": "object",
      "properties": {
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "image": {
          "type": "string",
          "contentMediaType": "image/jpeg"
        },
        "date": {
          "type": "string",
          "pattern": "[+-]?\\d{4}(-[01]\\d(-[0-3]\\d(T[0-2]\\d:[0-5]\\d:?([0-5]\\d(\\.\\d+)?)?[+-][0-2]\\d:[0-5]\\dZ?)?)?)?"
        },
        "title": {
          "type": "string",
          "minLength": 30,
          "maxLength": 250
        },
        "preview-text": {
          "type": "string",
          "minLength": 30,
          "maxLength": 250
        },
        "text": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1000
        }
      },
      "required": ["categories", "image", "date", "title", "preview-text", "text"]
    }
  },
  "required": ["body"]
}
