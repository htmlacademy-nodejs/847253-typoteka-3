include button-content/button-content

mixin Button
  -
    const {
      class: className,
      'aria-label': ariaLabel,
      currentPath,
      disabled,
      for: inputId,
      href,
      pressed = attributes.tag === 'a' ? attributes.currentPath === attributes.href : undefined,
      shape = 'rounded',
      size = '350',
      tag,
      theme,
      type = 'button',
      view,
      width,
    } = attributes;

    const buttonClasses = [
      'button',
      `button_shape_${shape}`,
      `button_size_${size}`,
      pressed && 'button_pressed',
      theme && `button_theme_${theme}`,
      view && `button_view_${view}`,
      className,
    ];

    const buttonStyle = [
      width && `width: ${width}`
    ].join(';');

    const isCurrentPath = href === currentPath;

  case tag
    when 'a'
      a(
        class=[
          ...buttonClasses,
          disabled && 'button_disabled'
        ],
        href=!isCurrentPath && href,
        style=buttonStyle
        aria-label=!isCurrentPath && ariaLabel
      )
        if block
          +ButtonContent
            block
        else
          +ButtonContent

    when 'label'
      label(
        class=buttonClasses,
        style=buttonStyle,
        for=inputId,
      )
        if block
          +ButtonContent
            block
        else
          +ButtonContent
    when 'span'
      span(
        class=buttonClasses,
        style=buttonStyle,
      )
        if block
          +ButtonContent
            block
        else
          +ButtonContent
    default
      button(class=buttonClasses, aria-label=ariaLabel, disabled=disabled, style=buttonStyle, type=type, )
        if block
          +ButtonContent
            block
        else
          +ButtonContent
