  const excludeAttributes = (object, propertiesToExclude) => {
    const objectWithoutExcludedProperties = {};

    Object.entries(object).forEach(([key, value]) => {
      if (!propertiesToExclude.includes(key)) {
        objectWithoutExcludedProperties[key] = value;
      }
    });

    return objectWithoutExcludedProperties;
  };

  const pickAttributes = (object, propertiesToPick) => {
    const objectWithPickedProperties = {};

    Object.entries(object).forEach(([key, value]) => {
      if (propertiesToPick.includes(key)) {
        objectWithPickedProperties[key] = value;
      }
    });

    return objectWithPickedProperties;
  };

  const getUserFriendlyDateString = (dateIsoStringOrDateObject, {withTime} = {withTime: true}) => {
    const date = typeof dateIsoStringOrDateObject === 'string'
            ? new Date(dateIsoStringOrDateObject)
            : dateIsoStringOrDateObject;
    const day = String(date.getDate()).padStart(2, '0');
    const month = String(date.getMonth() + 1).padStart(2, '0');
    const year = date.getFullYear();

    if (withTime) {
      const hours = String(date.getHours()).padStart(2, '0');
      const minutes = String(date.getMinutes()).padStart(2, '0');

      return `${day}.${month}.${year} ${hours}:${minutes}`;
    }

    return `${day}.${month}.${year}`;
  };
