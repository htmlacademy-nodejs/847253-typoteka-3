include ../../../views/components/plate/plate
include ../../../views/components/link/index

include last-comments/last-comments
include most-discussed-posts/most-discussed-posts

append style
  include:sass style.scss

mixin MostInterestingPlate
  - const {class: className, mostDiscussedPosts, lastComments} = attributes;

  +Plate(class=['most-interesting-plate', className])
    h2.visually-hidden Самое интересное
    +MostDiscussedPosts.most-interesting-plate__most-discussed-posts(mostDiscussedPosts=mostDiscussedPosts)
    +LastComments.most-interesing-plate__last-comments(lastComments=lastComments)
